<% title "Groups" %>

<div class="resetLayout" >
  
  <div class="row-fluid">
    <div class="ColA span6Group">
      <b> Groups I'm in : <%= @myGroups.length %></b>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span12">
      <table>
      <th>Group Name</th>
      <th>Admin Email</th>
      <th>Actions</th>
      <% for group in @groups %>
      <tr>
          <td><%= group.name %></td>
	  <td><%= group.user.email unless group.user.nil? %></td>
	  <td><%= link_to "Show", group %>|<%= link_to "Edit", edit_group_path(group) %>|<%= link_to "Destroy", group, :confirm => 'Are you sure?', :method => :delete %></td>

      </tr>
      <% end %>
      </table>
    </div>
  </div>

  <p><%= link_to "New Group", new_group_path %></p>


</div>
