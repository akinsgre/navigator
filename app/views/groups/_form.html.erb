<div class="container-fluid" width="100%">
  <%= nested_form_for @group do |f| %><br/>
  <%= f.error_messages %><br/>

  <fieldset align="center">
    <legend>New Group</legend>

    <div class="row-fluid">
      <div class="span11">
	<%= f.label :name %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span11">
	<%= f.text_field :name %>
      </div><br/><br/><br/>
    </div>
    <div class="row-fluid">
      <div class="span11">
	<%= f.label :description %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span11">
	<%= f.text_field :description %>
	<%= f.hidden_field :user_id %>
	
      </div>
    </div>
    <% if current_user.admin? %>
    <p>
      Owned by:
      <%= f.collection_select :user_id, User.all(:order => "email"), :id, :email, :include_blank => true %>
    </p>
    <% end %>
  </fieldset>

  <fieldset>
    <legend>Sponsor Info</legend>

    <div class="row-fluid">
      <div class="span11">
	<%= f.label :sponsor_email %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span11">
	<%= f.text_field :sponsor_email %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span11">
	<p>You don't have to have a sponsor; if you don't have one, your messages will be supported by one of our other advertisers.</p>
      </div>
      <div class="row-fluid">
	
	<div class="CGbuttonalign" > 
	  <%= f.submit %>
	</div>
      </div>
  </fieldset>


  <% end %>
  </div>
