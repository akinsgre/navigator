<div class="container-fluid" width="100%">
<%= nested_form_for @group do |f| %><br/>
<%= f.error_messages %><br/>
<div>	
<fieldset align="center">
<p class="resetLayout">
 <div class="row-fluid">
   <div class="span11">
     <legend>New Group</legend>
   </div>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <%= f.label :name %>
   </div>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <%= f.text_field :name %>
   </div><br/><br/><br/>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <%= f.label :description %>
   </div>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <%= f.text_field :description %>
     <%= f.hidden_field :user_id %>
     </p>
   </div>
 </div>
   <% if current_user.admin? %>
   <p>
   Owned by:
<%= f.collection_select :user_id, User.all(:order => "email"), :id, :email, :include_blank => true %>
</p>
<% end %>
</fieldset>

 <div class="row-fluid">
<fieldset>
<legend>Sponsor Info</legend>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <%= f.label :sponsor_email %>
   </div>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <%= f.text_field :sponsor_email %>
   </div>
 </div>
 <div class="row-fluid">
   <div class="span11">
     <p>You don't have to have a sponsor; if you don't have one, your messages will be supported by one of our other advertisers.</p>
</fieldset>
   </div>
 </div>
<fieldset>
 <div class="row-fluid">
   <div class="span11">
     <legend><b>Members</b></legend>
   </div>
 <div class="row-fluid">
  <%= f.fields_for :contacts do |c| %>
  <%= c.text_field :name %>
  <% end %>
 </div>
 <div class="row-fluid">
   <p><b>Upload a list of members&nbsp&nbsp</b><br/><br/> 
     </div>
  <div class="row-fluid">
    <%= f.file_field :bulk_upload %></p>
     <br/>
  </div>
  <div class="row-fluid">
    <div class="span11">
      <p><%= f.link_to_add "Add a contact", :contacts %></p>
    </div>
 </div>
 <div class="row-fluid">
<p>
  <div class="CGbuttonalign" > 
    <%= f.submit %>
</p>
   </div>
</fieldset>
 </div>
<% end %>
</div>
