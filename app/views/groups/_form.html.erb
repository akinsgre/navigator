<%= form_for @group do |f| %>
  <%= f.error_messages %>
  <fieldset>
  <p class="resetLayout">
    <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>
    <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
    </div>
    <%= f.hidden_field :user_id %>
  </p>
  <% if current_user.admin? %>
       <p>
	 Owned by: 
	 <%= f.collection_select :user_id, User.all(:order => "email"), :id, :email, :include_blank => true %>

       </p>
  <% end %>
  </fieldset>
  <fieldset>
    <%= f.label :sponsor_email %>
    <%= f.text_field :sponsor_email %>
  </fieldset>
  <p><%= f.submit %></p>
<% end %>
