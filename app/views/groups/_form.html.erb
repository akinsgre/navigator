<%= form_for @group do |f| %>
  <%= f.error_messages %>
  <p>
   <%= f.label :parent_id %><br />
    <%= f.collection_select :parent_id, Group.all(:order => "name"), :id, :name, :include_blank => true %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    Owned by: 
    <%= f.collection_select :user_id, User.all(:order => "email"), :id, :email, :include_blank => true %>

  </p>
  <p><%= f.submit %></p>
<% end %>
