<% title "Edit Group" %>

<div class="container-fluid" width="100%">
  <%= nested_form_for @group do |f| %><br/>
  <%= f.error_messages %><br/>

  <div class="row-fluid">
    <div class="span11">
      <%= f.label :name %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span11">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span11">
      <%= f.label :description %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span11">
      <%= f.text_field :description %>
      <%= f.hidden_field :user_id %>
    </div>
  </div>
  <% if current_user.admin? %>
  <p>
    Owned by:
    <%= f.collection_select :user_id, User.all(:order => "email"), :id, :email, :include_blank => true %>
  </p>
  <% end %>

  <div class="row-fluid">
    <div><%= link_to "Cancel", @group %></div>
    <div class="CGbuttonalign" > 
      <%= f.submit %>
    </div>
  </div>



  <% end %>
</div>

