<div class="container">
<div class="row">
<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>
</div>
<div class="row">
  <div class="span6" >
    <%= form_for(@contact, :url => groups_save_contact_path) do |f|  %>
    <%= hidden_field :group, :id %>
<p>
  Preferred method of contact <br>
  <%= f.select "type", options_for_select(Contact.select_options) %>
</p>

    <%= f.label :entry, "Email Address", :id => "entryLabel" %>
      <%= f.text_field :entry %>

      <%= f.label :identifier, "Contact Description" %>
      <%= f.text_field :identifier %>
      <br>
      <div class="buttonBG" align="right">
      <%= f.submit "Subscribe to the group!", class: "btn btn-large btn-primary" %>
    <% end %>
    </div>
  </div>
</div>
</div>
