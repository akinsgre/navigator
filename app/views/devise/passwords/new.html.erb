<div class="row-fluid">
  <div class="span11">
    <h2>Forgot your password?</h2>
  </div>
</div>
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
 <div class="error_explanation"> <%= devise_error_messages! %>
   </div>
  <div class="row-fluid">
     <div class="span11">
       <%= f.label :email %><br />
     </div>
  </div>
  <div class="row-fluid">
    <div class="span11">
      <%= f.email_field :email %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span11">
      <%= f.submit "Send me reset password instructions" %></div>
         <% end %>
    </div>

<%= render :partial => "devise/shared/links" %>
  </div>
