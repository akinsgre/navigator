<div class="container-fluid">
  <div class="row-fluid">
    <div class="colA span5">
      <div class="row-fluid">
	<div class="span11">
	  <h2>Sign up</h2>
	</div>      
      </div>
      <%= form_for(resource, :as => resource_name, :url => registration_path( resource_name), :html => {:novalidate => 'novalidate'}) do |f| %>

      <% flash.each do |key, msg| %>
      
      <div id="flash_<%= key %>">
	<p><%= msg %></p>
      </div>
      <% end %>
      
      
      <div class="row-fluid" align="center"> 
	<div class="error_explanation" float="center"><%= devise_error_messages! %></div>
      </div>
      
      <div class="row-fluid"> 
	<div class="span11">
	  <%= f.label :email %><br />
        </div>
      </div>
      <div class="row-fluid">
	<div class="span11">
	  <%= f.email_field :email %>
        </div>
      </div>
      <div class="row-fluid">
	<div class="span11">
	  <%= f.label :password %><br />
        </div>
      </div>
      <div class="row-fluid">
	<div class="span11">
	  <%= f.password_field :password %>
	</div>
      </div>
      <div class="row-fluid">
	<div class="span11">
	  <%= f.label :password_confirmation %><br />
        </div>
      </div>
      <div class="row-fluid">
	<div class="span11">
	  <%= f.password_field :password_confirmation %><br />
        </div>
      </div>
      <div class="row-fluid">
	<div class="span11">
	  <%= f.submit "Sign up" %>
	  <% end %>
<%= render :partial => "devise/shared/links_sans_signin" %>
	</div>

      </div>
    </div>
    <div class="colB span6" >
      <div class="row-fluid">
	<div class="span11" text-align="center">
	  <div class="row-fluid">
	    <div class="span11" text-align="center"><h2>Steps to register a group with NMC:</h2><br/>
	    </div>
	  </div>
          <div class="row-fluid">
	    <div class="span11" align="left">
	      <b>1.</b>&nbsp Provide your email and a password.
	    </div>
	  </div>
	  <div class="row-fluid">
	    <div class="span11" align="left">
	      <b>2.</b>&nbsp Provide a name and description of your group
	    </div>
	  </div>

	</div>
      </div>
    </div>
    <br/>
  </div>


</div>
