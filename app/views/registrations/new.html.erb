<div class="container-fluid">
  <div class="row-fluid">
    <div class="colA span4">
      <div class="row-fluid">
      <h2>Sign up</h2>
	 <%= form_for(resource, :as => resource_name, :url => registration_path(          resource_name)) do |f| %>
       </div>
      
       <div class="row-fluid" align="center"> 
	 <%= devise_error_messages! %>
       </div><br /><br />

       <div class="row-fluid"> 
	 <div class="span5">
	   <%= f.label :email %><br />
         </div>
       </div>
       <div class="row-fluid">
	 <div class="span5">
	   <%= f.email_field :email %>
         </div>
       </div>
       <div class="row-fluid">
	 <div class="span5">
	   <%= f.label :password %><br />
         </div>
       </div>
       <div class="row-fluid">
	 <div class="span5">
	   <%= f.password_field :password %>
	</div>
       </div>
       <div class="row-fluid">
	 <div class="span5">
	   <%= f.label :password_confirmation %><br />
         </div>
        </div>
       <div class="row-fluid">
	 <div class="span5">
	   <%= f.password_field :password_confirmation %><br />
         </div>
       </div>
       <div class="row-fluid">
	<div class="span5">
	  <%= f.submit "Sign up" %>
		     <% end %>
	</div>
       </div>
      </div>
<div class="colB span4">
  <div class="row-fluid">
    <div class="span4">This is where the text will go to describe the process for registering a group with NMC
    </div>
 </div>
</div>
<br/>
</div>
<%= render :partial => "devise/shared/links_sans_signin" %>

</div>
