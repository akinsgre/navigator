<?xml version="1.0" encoding="UTF-8"?>
<Response>
	<Gather action="twiml/say" numDigits="1">
		<Say>There is a message waiting from <%= @group %>..</Say>
		<Say>To play your message, press 1.</Say>
	</Gather>
	<!-- If customer doesn't input anything, prompt and try again. -->
	<Say>Sorry, I didn't get your response.</Say>
	<Redirect>twiml/say</Redirect>
</Response>
