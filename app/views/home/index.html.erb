<div id="invite_form" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h3 class="modal-title">Please Invite me</h3>
      </div>
        <%= form_tag('/invites/create', id: 'new_invite', remote: true) do |f| %>
      <div class="modal-body">
	
	    <%= email_field_tag :email %>

      </div>
      <div class="modal-footer">
        <a  data-dismiss="modal">Close</a>
        <%= submit_tag "Ask for Invite", class: "btn btn-primary" %>
      </div>
	<% end %>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<p><span class="emphasis">Welcome!</span> to the fastest, simplest way ever to notify
  <span class="emphasis" float="center"> everybody</span>&nbsp in your organization, club or team of upcoming events, schedule changes, cancellations, etc...</p>
<p>Best of all, the application is free to your members.</p>
<div id="alerts">
<% flash.each do |key, msg| %>
<div id="flash_<%= key %>">
  <p><%= msg %></p>
</div>
<% end %>
</div>
<div class="row-fluid" >
  <div class="col-md-4">
    <h1>Join Existing Group</h1>
    Start typing below to find your group.  Click on your group name to select it and proceed.
    <div id="remote" align="center">
      <input class="typeahead" type='text' id="groupsearch" icon="favicon.gif" placeholder="Group Name" float="center"></input>
    </div>
  </div>
  <div class="col-md-4">
    <h1 align="center">Group Leaders (Invite Only)</h1>
    <div class="center-wrapper">
      <%= button_to "Join Now", new_user_registration_path, :class => "button", :method => :get %>
    </div>
    <h2>Invite Only. <a id="invite_btn">Request an invite</a></h2>
  </div>
  <div class="col-md-4">
    <a href="mailto:info@notifymyclub.com"><h1>Sponsoring</h1></a>
    <a href="mailto:info@notifymyclub.com"><h1>Advertising</h1></a>
    <a href="mailto:info@notifymyclub.com"><h1>More Info</h1></a>

  </div>
</div>










